{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "completion.autoRequire": false,
  "runtime.version": "LuaJIT",
  "hint.enable": true,
  "diagnostics": {
    "globals": [
      "vim",
      "LazyVim",
      "Snacks"
    ],
    "groupSeverity": {
      "strict": "Warning",
      "codestyle": "Warning",
      "await": "Hint",
      "type-check": "Warning",
      "conventions": "Warning",
      "strong": "Warning"
    },
    "severity": {
      "lowercase-global": "Warning",
      "name-style-check": "Warning",
      "no-unknown": "Warning",
      "trailing-space": "Warning"
    }
  }
}
